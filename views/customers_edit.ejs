<% include layout/header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="first_name" value="<%= data.first_name%>" placeholder="First Name" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="last_name" value="<%= data.last_name%>" placeholder="Last Name" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            Save Customer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include layout/footer %>
